---
import Image from "astro/components/Image.astro";
import MyPhoto from "../assets/crisi.PNG";
import Seal from "./Seal.astro";
---

<article
  class="relative min-w-[394px] h-[662px] bg-[#0c06ac] ml-[19px] p-[20px]"
>
  <Seal />
  <div class="w-full h-[543px]">
    <Image
      decoding="async"
      loading="lazy"
      class="saturate-0 object-cover object-center h-full"
      src={MyPhoto}
      alt="Mi foto"
    />
  </div>
  <div class="flex flex-col w-full text-[20px] text-white text-right mt-2">
    <span class="font-light">Desarrollador full-stack</span>
    <span class="font-extrabold">Hugo Alejandro Corona Ruvalcaba</span>
  </div>
</article>

<style>
  article {
    animation: fade-in auto both;
    animation-timeline: view();
    animation-range: entry 40% cover 60%;
  }

  @keyframes fade-in {
    from {
      transform: translate(0px, 200px);

      box-shadow: 0;
    }
    to {
      transform: translate(0);

      box-shadow: -19px 16px 0px 0px rgb(13, 5, 210);
    }
  }
</style>
